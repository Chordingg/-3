{{>layouts/header}}

<!-- main content -->
<div class="container mt-4">
    <h2>게시판</h2>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">번호</th>
            <th scope="col">제목</th>
            <th scope="col">내용</th>
            <th scope="col">작성일시</th>
            <th scope="col">수정일시</th>
        </tr>
        </thead>
        <tbody>
        {{#articleList}}
            <tr>
                <th>{{id}}</th>
                <td><a href="/articles/{{id}}">{{title}}</a></td>
                <td>{{content}}</td>
                <td></td>
                <td></td>
            </tr>
        {{/articleList}}
        </tbody>
    </table>

    <a href="articles/new" class="btn btn-primary">게시글 작성</a>
</div>

{{>layouts/footer}}